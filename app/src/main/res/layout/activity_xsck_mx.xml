<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@drawable/bg_activity_desc_all"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="明细"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:background="@drawable/bg_activity_desc_top"
            />
        <ListView
            android:id="@+id/lvShowDesc"
            android:layout_below="@+id/tvTitle"
            android:padding="10dp"
            android:scrollbars="none"
            android:divider="#eeeeee"
            android:dividerHeight="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:id="@+id/rlClose"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_activity_desc_bottom"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/black_cha"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/rlClose"
            android:background="#eeeeee"/>
    </RelativeLayout>
</RelativeLayout>